<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_r03"
    android:orientation="vertical"
    tool:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing02"
        android:paddingLeft="@dimen/spacing05"
        android:paddingRight="@dimen/spacing05"
        android:paddingTop="@dimen/spacing05">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing02"
            android:visibility="gone"
            tool:src="@mipmap/ic_launcher_round"
            tool:visibility="visible"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing02"
            android:gravity="center"
            android:textColor="@color/txt1"
            android:textSize="@dimen/txt_normal03"
            tool:text="标题"
            />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing02"
            android:background="@drawable/bg_gray_border_gray_r02"
            android:padding="@dimen/spacing01"
            android:textSize="@dimen/txt_normal02"
            android:visibility="gone"
            tool:visibility="visible"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing02"
            android:gravity="center"
            android:textColor="@color/txt2"
            android:textSize="@dimen/txt_normal01"
            android:visibility="gone"
            tool:text="呢绒"
            tool:visibility="visible"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_split"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/column_no_space">

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/line_split"
            android:visibility="gone"
            tool:visibility="visible"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/view_line"
            android:background="@drawable/press_bg_white_to_gray_r03_lb"
            android:textColor="@color/txt2"
            android:textSize="@dimen/txt_normal03"
            tool:text="@string/cancel"/>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view_line"
            android:background="@drawable/press_bg_white_to_gray_r03_rb"
            android:textColor="@color/blue"
            android:textSize="@dimen/txt_normal03"
            android:visibility="gone"
            tool:text="@string/confirm"
            tool:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>
